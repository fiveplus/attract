<!--register.wxml-->
<import src="/pages/footer/footer.wxml" />
<view class="weui-toptips weui-toptips_warn" wx:if="{{msg}}">{{msg}}</view>
<view class="container">
  <form bindsubmit="formSubmit" class="form">

    <view class="weui-cells__title">请填写注册信息</view>
    <view class="weui-cells weui-cells_after-title">
      <!-- 姓名 -->
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">姓名</view>
        </view>
        <view class="weui-cell__bd">
          <input name="wechatId" hidden="true" value="{{openid}}" />
          <input name="name" focus="true" class="weui-input" placeholder="请输入姓名" focus="true" maxlength="20" />
        </view>
      </view>
      <!-- 联系电话 -->
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">联系电话</view>
        </view>
        <view class="weui-cell__bd">
          <input name="telephone" class="weui-input" placeholder="请输入联系电话" type="number" maxlength="11" />
        </view>
      </view>
      <!-- 所属园区 -->
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">所属园区</view>
        </view>
        <view class="weui-cell__bd">
          <input name="park" class="weui-input" placeholder="请输入所属园区" focus="true" maxlength="20" />
        </view>
      </view>

    </view>

    <view class="weui-btn-area">
      <button class="weui-btn" form-type="submit" type="primary" >注册</button>
    </view>

  </form>
</view>
<view class="page__ft">
  <template is="footer"></template>
</view>