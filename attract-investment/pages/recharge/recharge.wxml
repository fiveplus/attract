<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="warn" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">操作失败</view>
            <view class="weui-msg__desc">{{msg}}</view>
            <view class="weui-msg__desc">{{info}}</view>
            <view class="weui-msg__desc">
              <!-- 二维码 -->
              <image mode="widthFix" src="{{ewmPath}}" ></image>
            </view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="default" bindtap="bindBack">返回</button>
            </view>
        </view>
        <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__links">
                    <navigator url="" class="weui-footer__link">百创汇国际生物科技（武汉）股份有限公司</navigator>
                </view>
                <view class="weui-footer__text">Copyright © 2016-2024 bridgebiomed.com</view>
            </view>
        </view>
    </view>
</view>
